<?xml version="1.0"?>
<odoo>
	<record id="todo_app_todo_category_view_list" model="ir.ui.view">
        <field name="name">todo_app.todo_category.view.list</field>
        <field name="model">todo_app.todo_category</field>
        <field name="arch" type="xml">
			<list editable="bottom">
				<field name="name"/>
				<field name="description"/>
			</list>
		</field>
	</record>
	
	<record id="action_todo_app_todo_category" model="ir.actions.act_window">
		<field name="name">Todo Category</field>
		<field name="res_model">todo_app.todo_category</field>
		<field name="view_mode">list</field>
	</record>
</odoo>

