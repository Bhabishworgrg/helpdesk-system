<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="todo_app_todo_cancel_wizard_view_form" model="ir.ui.view">
        <field name="name">todo_app.todo_cancel_wizard.view.form</field>
        <field name="model">todo_app.todo_cancel_wizard</field>
        <field name="arch" type="xml">
			<form string="Cancel Todo">
				<field name="todo_id" invisible="1"></field>
                <group>
                    <field name="remark"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_stat_button"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_todo_app_todo_cancel_wizard" model="ir.actions.act_window">
        <field name="name">Cancel Todo</field>
        <field name="res_model">todo_app.todo_cancel_wizard</field>
        <field name="view_mode">form</field>
		<field name="context">{ 'default_todo_id': active_id }</field>
        <field name="target">new</field>
    </record>
</odoo>

