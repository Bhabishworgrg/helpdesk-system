<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="helpdesk_todo_todo_next_stage_wizard_view_form" model="ir.ui.view">
        <field name="name">helpdesk_todo.todo_next_stage_wizard.view.form</field>
        <field name="model">helpdesk_todo.todo_next_stage_wizard</field>
		<field name="arch" type="xml">
			<form string="Next Stage">
				<field name="todo_id" invisible="True"/>
                <group>
                    <field name="remark"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" special="cancel" class="oe_stat_button"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_helpdesk_todo_todo_next_stage_wizard" model="ir.actions.act_window">
        <field name="name">Send to Next Stage</field>
        <field name="res_model">helpdesk_todo.todo_next_stage_wizard</field>
        <field name="view_mode">form</field>
		<field name="context">{ 'default_todo_id': active_id }</field>
        <field name="target">new</field>
    </record>
</odoo>
